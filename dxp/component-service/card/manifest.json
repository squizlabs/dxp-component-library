{
  "$schema": "http://localhost:3000/schemas/v1.json",
  "name": "card",
  "namespace": "layouts-card",
  "description": "Individual Card",
  "displayName": "Card",
  "version": "1.0.0",
  "type": "edge",
  "mainFunction": "main",
  "icon": {
    "id": "grid_view",
    "color": {
      "type": "enum",
      "value": "gray"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "main.js",
      "input": {
        "type": "object",
        "properties": {
          "contentType": {
            "type": "string",
            "title": "Content Type",
            "description": "The content type displayed above the card's heading.",
            "default": "Content type",
            "translatable": true,
            "ui:metadata": {
              "inlineEditable": true
            }
          },
          "heading": {
            "type": "string",
            "title": "Heading",
            "description": "The main heading of the card.",
            "default": "Heading",
            "translatable": true,
            "ui:metadata": {
              "inlineEditable": true
            }
          },
          "supportingText": {
            "type": "FormattedText",
            "title": "Supporting Text",
            "description": "The text displayed below the card's heading.",
            "default": "Supporting text",
            "translatable": true,
            "ui:metadata": {
              "inlineEditable": true
            }
          },
          "link": {
            "type": "SquizLink",
            "title": "Link",
            "description": "A link associated with the card.",
            "ui:metadata": {
              "inlineEditable": true
            }
          },
          "image": {
            "type": "SquizImage",
            "title": "Image",
            "description": "An image displayed in the card's background.",
            "ui:metadata": {
              "inlineEditable": true
            }
          }
        },
        "required": ["heading"]
      },
      "output": {
        "responseType": "html"
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./"
  },
  "previews": {
    "default": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "example.data.json"
          },
          "wrapper": {
            "path": "preview.html"
          }
        }
      }
    }
  }
}
